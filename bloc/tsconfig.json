{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "lib": ["es2015"],
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "lib/**/*.ts",
    "app.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "declaration": true,
}